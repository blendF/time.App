@model TimeApp.Models.Language

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <style>
        
        .control-label{
            font-size: 20px;
            color: snow;
            text-align: center;
        
        }
        .create_language{
            color:snow;
            font-size: 40px;
        margin-bottom: 70px;
        margin-top: -50px;
        }
    </style>

<h1 class="create_language">Create Language</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LanguageType" class="control-label"></label>
                <input asp-for="LanguageType" class="form-control" />
                <span asp-validation-for="LanguageType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a  class="btn btn-primary"  asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
